                })


        +footer-with-nav({
            description: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
            copyright: 'Copyright © 2018 Toxin отель. Все права зачищены.',
            form: {
                header: 'Подписка',
                caption: 'Получайте специальные предложения и новости сервиса',
                placeholder: 'Email'
            },
            links: [
                {
                    header: 'навигация',
                    links: [
                        'О нас',
                        'Новости',
                        'Служба поддержки',
                        'Услуги',
                    ]
                },
                {
                    header: 'о нас',
                    links: [
                        'О сервисе',
